<main>
    <div class="editPage">
        <h2>Edit photo</h2>
        <form method="POST">
            <p>
                <input type="text" name="name" placeholder="Name" value="{{post.name}}">
            </p>

            <p>
                <input type="number" name="age" placeholder="Age" value="{{post.age}}">
            </p>

            <p>
                <textarea type="text" name="description" placeholder="Description">{{post.description}}</textarea>
            </p>

            <p>
                <input type="text" name="location" placeholder="Location" value="{{post.location}}">
            </p>

            <p>
                <input type="text" name="image" placeholder="Link to image" value="{{post.image}}">
            </p>
            <button class="edit-btn" type="submit">Edit Photo</button>
        </form>
    </div>
</main>
