<main>
    <div class="profile">

        <div class="profile-data">
            <div class="profile_img">
                <div class="image">
                    <img src="/static/images/person.png" alt="img8">
                </div>
            </div>
            <div class="personal">
                <div class="edit">
                    <p>{{owner.username}}</p>
                </div>
                <div class="data">

                    <span>{{postsCount}}</span>
                    <p>photos</p>

                </div>
                <p class="email">{{owner.email}}</p>
            </div>
        </div>

        <div class="pet-photos">
            {{#if posts}}
            {{#each posts}}
            <a href="/posts/{{_id}}/details">
                <img src="{{image}}"
                    alt="pet img">
            </a>
            {{/each}}
            {{else}}
            <article class="not-available-photo">
                <h1>You haven't uploaded photos yetâ€¦</h1>
            </article>
            {{/if}}
        </div>

    </div>
</main>
